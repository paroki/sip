{
    "compilerOptions": {
        "baseUrl": "pwa",
        "target": "esnext",
        "useDefineForClassFields": true,
        "allowSyntheticDefaultImports": true,
        "composite": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "vitest",
            "node",
            "vuetify",
            "vue"
        ],
        "paths": {
            "@/*": [
                "./pwa/*"
            ]
        },
    },
    "include": [
        "pwa/**/*.ts",
        "pwa/**/*.d.ts",
        "pwa/**/*.tsx",
        "pwa/**/*.vue"
    ]
}
